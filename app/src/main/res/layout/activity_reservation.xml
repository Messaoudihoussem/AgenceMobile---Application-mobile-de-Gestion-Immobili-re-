<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".ReservationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-217dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Annonce selectione"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tittleupdate"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Tittle"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView80" />

            <EditText
                android:id="@+id/priceupdate"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Price"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tittleupdate"
                app:layout_constraintStart_toStartOf="@+id/tittleupdate"
                app:layout_constraintTop_toBottomOf="@+id/tittleupdate" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/usernameclient"
                app:layout_constraintTop_toBottomOf="@+id/textView17">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Mr" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mme" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Insertion des coordonnÃ©es"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceupdate" />

            <EditText
                android:id="@+id/usernameclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:paddingStart="15dp"
                android:text="Username"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

            <EditText
                android:id="@+id/nomclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Nom"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernameclient" />

            <EditText
                android:id="@+id/prenomclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Prenom"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/nomclient"
                app:layout_constraintStart_toStartOf="@+id/nomclient"
                app:layout_constraintTop_toBottomOf="@+id/nomclient" />

            <EditText
                android:id="@+id/adresseclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Adresse"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/prenomclient"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/prenomclient"
                app:layout_constraintTop_toBottomOf="@+id/prenomclient" />

            <EditText
                android:id="@+id/villeclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Ville"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/adresseclient"
                app:layout_constraintStart_toStartOf="@+id/adresseclient"
                app:layout_constraintTop_toBottomOf="@+id/adresseclient" />

            <EditText
                android:id="@+id/codepostalclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Code Postal"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/villeclient"
                app:layout_constraintStart_toStartOf="@+id/villeclient"
                app:layout_constraintTop_toBottomOf="@+id/villeclient" />

            <EditText
                android:id="@+id/emailclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/codepostalclient"
                app:layout_constraintStart_toStartOf="@+id/codepostalclient"
                app:layout_constraintTop_toBottomOf="@+id/codepostalclient" />

            <EditText
                android:id="@+id/telmobileclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="tel_mobile"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/emailclient"
                app:layout_constraintStart_toStartOf="@+id/emailclient"
                app:layout_constraintTop_toBottomOf="@+id/emailclient" />

            <EditText
                android:id="@+id/telfixeclient"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bottom_navigator_background"
                android:ems="10"
                android:hint="tel_fixe"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/telmobileclient"
                app:layout_constraintStart_toStartOf="@+id/telmobileclient"
                app:layout_constraintTop_toBottomOf="@+id/telmobileclient" />

            <Button
                android:id="@+id/validebtnclient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="200dp"
                android:text="Valide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/telfixeclient"
                app:layout_constraintStart_toStartOf="@+id/telfixeclient"
                app:layout_constraintTop_toBottomOf="@+id/telfixeclient" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#E6E6E6"
        android:backgroundTint="#E6E6E6"
        app:fabCradleMargin="8dp"
        app:fabCradleRoundedCornerRadius="50dp"
        app:fabCradleVerticalOffset="6dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_navigator_background"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/homebtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/home" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Login1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:onClick="nextpage"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/account" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addBtnmain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/supportBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/support" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingsBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/settings" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>


</androidx.constraintlayout.widget.ConstraintLayout>